<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Cart" table="cart" schema="hibernate">
        <id name="id">
            <column name="id" sql-type="int"/>
            <generator class="increment" />
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="total">
            <column name="total" sql-type="int" not-null="true"/>
        </property>

        <set name="items" table="cart_item" inverse="false" lazy="true" fetch="select" cascade="all" >
            <key> <column name="id_cart" not-null="true"></column></key>
        <many-to-many entity-name="Item">
            <column name="id_item" not-null="true"></column>
        </many-to-many>
        </set>

    </class>
</hibernate-mapping>